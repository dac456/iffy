<!DOCTYPE html>

<style type="text/css">
    body {
        background-image: url('{{fanart}}');
        background-attachment: fixed;
        background-repeat: no-repeat;
        background-size: cover;        
    }
</style>

<div class="container">
    <div class="row">
        <div class="panel panel-default"  style="opacity: 0.8;">
            <div class="panel-body">
                <a href="javascript: history.go(-1)">
                    <button type="button" class="btn btn-default btn-lg">
                        <span class="glyphicon glyphicon-circle-arrow-left"></span> Back
                    </button>
                </a>
            </div>
        </div>
    </div>    
    <div class="row">
        
            <div class="panel panel-default" style="opacity: 0.8;">
                <div class="panel-body">
                    
                    <div class="col-md-2"><img src="{{image}}" alt="{{title}}" width="128px" height="192px" class="img-rounded" /></div>
                    <h3>{{showTitle}}</h3>
                    <p>{{overview}}</p>
                    
                </div>
            </div>
        
    </div>
    <div class="row">

            <ul class="list-group">
                {{#episodes}}
                <li class="list-group-item"><a href="/bt#{{magnet}}">Season {{seasonNumber}}, Episode {{episodeNumber}}</a></li>
                {{/episodes}}
            </ul>
        
    </div>
</div>
