<!DOCTYPE html>

<style type="text/css">
    body {
        background-image: url('{{fanart}}');
        background-attachment: fixed;
    }
</style>

<div class="container">
    <div class="row">
        
            <div class="panel panel-default" style="opacity: 0.8;">
                <div class="panel-body">
                    
                    <div class="col-md-2"><img src="{{image}}" alt="{{movieTitle}}" width="128px" height="192px" class="img-rounded" /></div>
                    <h3>{{movieTitle}}</h3>
                    <p>{{overview}}</p>
                    
                    <a href="/bt/#{{maglink}}">
                    <button type="button" class="btn btn-default btn-lg">
                        <span class="glyphicon glyphicon-play"></span> Play
                    </button>
                    </a>
                </div>
            </div>
        
    </div>
    <!--<div class="row">
        <iframe src="/bt/#{{maglink}}" width="100%" height="600px"  frameBorder="0" seamless />
    </div>-->
</div>
